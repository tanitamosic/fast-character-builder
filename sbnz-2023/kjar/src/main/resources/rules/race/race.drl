dialect  "mvel"

rule "short"
no-loop true
salience 100
    when
        RaceParams(size=="SHORT")
    then
        insert(new ArrayList<Disposition>(Arrays.asList(Disposition.MEEK, Disposition.MISCHEVIOUS, Disposition.HARDWORKING,
        Disposition.CHILL, Disposition.GENTLE, Disposition.GRUFF, Disposition.SNOBBY)));
end

rule "short_meek_mischevious"
no-loop true
salience 110
    when
        RaceParams(size=="SHORT", disposition == "MEEK" || disposition == "MISCHEVIOUS")
    then
        insert(new ArrayList<ColorPallette>(Arrays.asList(ColorPallette.NATURAL, ColorPallette.UNNATURAL)));
end

rule "GOBLIN"
no-loop true
salience 111
    when
        RaceParams(size=="SHORT", disposition == "MEEK" || disposition == "MISCHEVIOUS", pallette=="UNNATURAL")
    then
       CharSheet cs = new CharSheet();
       cs.setRace(Race.GOBLIN);
       insert(cs);
end

