rule "DRAGONBORN_gruff"
no-loop true
salience 311
    when
        $rp: RaceParams(size=="TALL", disposition=="GRUFF", build=="STOCKY" || build=="LEAN")
    then
        CharSheet cs = new CharSheet();
        cs.setRace(Race.DRAGONBORN);
        insert(cs);
        modify($rp){$rp.pallette=ColorPallette.CHROMATIC_SCALES};
end

