rule "goblin"
salience 111
    when
        RaceParams(size=="SHORT", disposition == "MEEK" || disposition == "MISCHEVIOUS", category=="UNNATURAL")
    then
       CharSheet cs = new CharSheet();
       cs.setRace(Race.GOBLIN);
       insert(cs);
end

