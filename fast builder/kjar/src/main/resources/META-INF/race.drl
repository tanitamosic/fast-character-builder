rule "strangeness"
no-loop true
salience 70
    when
        accumulate(
            $rp: RaceParams($features: features)
            $fMin: min($features)
            $sum: sum($features)
            $count: count($count)
        )
    then
        modify($rp){$rp.strangeIndex = ($sum-$min)/$count};

end

